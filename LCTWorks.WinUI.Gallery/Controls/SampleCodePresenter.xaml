<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:LCTWorks.Workshop.Controls">
    <Thickness x:Key="SampleCodePresenterHeaderMargin">8,8,8,4</Thickness>
    <Thickness x:Key="SampleCodePresenterDescriptionMargin">8,0,8,8</Thickness>
    <Thickness x:Key="SampleCodePresenterBorderThickness">1</Thickness>
    <CornerRadius x:Key="SampleCodePresenterCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="SampleCodePresenterExpanderCornerRadius">0,0,8,8</CornerRadius>
    <Style x:Key="SampleCodePresenterHeaderTextBlockStyle"
           BasedOn="{StaticResource SmoothItemTitleTextBlockStyle}"
           TargetType="TextBlock" />
    <Style x:Key="SampleCodePresenterDescriptionTextBlockStyle"
           BasedOn="{StaticResource SmoothItemCaptionTextBlockStyle}"
           TargetType="TextBlock" />
    <Style TargetType="local:SampleCodePresenter">
        <Setter Property="ExpanderHeader"
                Value="Code snippets" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SampleCodePresenter">
                    <Grid x:Name="rootGrid"
                          IsTabStop="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="HeaderTextPresenter"
                                   Margin="{StaticResource SampleCodePresenterHeaderMargin}"
                                   Style="{ThemeResource SampleCodePresenterHeaderTextBlockStyle}"
                                   Text="{TemplateBinding Header}" />
                        <TextBlock x:Name="DescriptionTextPresenter"
                                   Grid.Row="1"
                                   Margin="{StaticResource SampleCodePresenterDescriptionMargin}"
                                   MaxLines="0"
                                   Style="{ThemeResource SampleCodePresenterDescriptionTextBlockStyle}"
                                   Text="{TemplateBinding Description}"
                                   TextAlignment="Justify"
                                   TextWrapping="WrapWholeWords"
                                   Visibility="Collapsed" />
                        <Grid Grid.Row="2"
                              Background="{ThemeResource LayerFillColorDefaultBrush}"
                              BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                              BorderThickness="{StaticResource SampleCodePresenterBorderThickness}"
                              CornerRadius="{StaticResource SampleCodePresenterCornerRadius}"
                              IsTabStop="False">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ContentPresenter x:Name="ContentControlPresenter"
                                              Padding="12"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Content="{TemplateBinding Content}"
                                              IsTabStop="False" />
                            <ContentPresenter x:Name="OptionsControlPresenter"
                                              Grid.Column="1"
                                              MinWidth="{TemplateBinding MinOptionsPaneWidth}"
                                              Padding="12"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Background="{ThemeResource LayerFillColorAltBrush}"
                                              Content="{TemplateBinding OptionsPaneContent}"
                                              IsTabStop="False" />
                            <Expander x:Name="Expander"
                                      Grid.Row="3"
                                      Grid.ColumnSpan="2"
                                      Padding="12,0"
                                      HorizontalAlignment="Stretch"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch"
                                      CornerRadius="{StaticResource SampleCodePresenterExpanderCornerRadius}"
                                      Header="{TemplateBinding ExpanderHeader}"
                                      Visibility="Collapsed">
                                <Grid>
                                    <Grid x:Name="CodeContainer">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <SelectorBar x:Name="CodeSelector"
                                                     HorizontalAlignment="Left"
                                                     HorizontalContentAlignment="Left" />
                                        <RichTextBlock x:Name="CodeRichTextBlock"
                                                       Grid.Row="1"
                                                       Margin="0,8,0,24" />
                                    </Grid>

                                    <Border x:Name="LoadingBorder"
                                            Grid.RowSpan="2"
                                            MinHeight="200">
                                        <ProgressRing HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      IsIndeterminate="True" />
                                    </Border>
                                </Grid>
                            </Expander>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
<Page x:Class="LCTWorks.Workshop.Views.ShellPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:c="using:LCTWorks.WinUI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:LCTWorks.Workshop"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:models="using:LCTWorks.Workshop.Models"
      xmlns:n="using:LCTWorks.WinUI.Navigation"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar x:Name="AppTitleBar"
                  Title="{x:Bind AppDisplayName}"
                  VerticalAlignment="Stretch"
                  IsBackButtonEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
                  IsBackButtonVisible="False"
                  IsPaneToggleButtonVisible="True">
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="/Assets/WindowIcon.ico" />
            </TitleBar.IconSource>
            <TitleBar.Content>
                <Rectangle Height="64" />
            </TitleBar.Content>
        </TitleBar>

        <NavigationView x:Name="NavigationViewControl"
                        Grid.Row="1"
                        Canvas.ZIndex="0"
                        IsPaneToggleButtonVisible="False"
                        IsSettingsVisible="True"
                        Loaded="NavigationViewControl_Loaded"
                        MenuItemsSource="{x:Bind ViewModel.ItemsSource, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.Selected, Mode=TwoWay}"
                        TabIndex="0">
            <NavigationView.MenuItemTemplate>

                <DataTemplate x:DataType="models:DocItem">
                    <NavigationViewItem n:NavigationHelper.NavigateTo="{x:Bind NavigationKey}"
                                        Content="{x:Bind Title}">
                        <NavigationViewItem.Icon>
                            <ImageIcon Source="{x:Bind IconPath}" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </DataTemplate>
            </NavigationView.MenuItemTemplate>

            <NavigationView.Content>
                <Grid>
                    <Frame x:Name="NavigationFrame" />
                </Grid>
            </NavigationView.Content>
        </NavigationView>

        <InfoBar x:Name="infoBarMessage"
                 Grid.Row="1"
                 Margin="0,64"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 CornerRadius="16"
                 IsClosable="False" />
    </Grid>
</Page>
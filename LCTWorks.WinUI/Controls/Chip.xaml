<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:LCTWorks.WinUI.Controls">

    <Thickness x:Key="ChipPadding">8,4</Thickness>
    <TextAlignment x:Key="ChipTextAlignment">Center</TextAlignment>
    <TextAlignment x:Key="ChipVerticalAlignment">Center</TextAlignment>
    <TextAlignment x:Key="ChipHorizontalTextAlignment">Center</TextAlignment>
    <SolidColorBrush x:Key="ChipBackgroundBrush" />
    <CornerRadius x:Key="ChipCornerRadius">8</CornerRadius>

    <Style x:Key="PreviewBadgeStyle"
           TargetType="local:Chip">
        <Setter Property="Background"
                Value="{ThemeResource SystemFillColorCaution}" />
        <Setter Property="Text"
                Value="PREV" />
        <Setter Property="Foreground"
                Value="White" />
    </Style>

    <Style TargetType="local:Chip">
        <Setter Property="Padding"
                Value="{StaticResource ChipPadding}" />
        <Setter Property="CornerRadius"
                Value="{StaticResource ChipCornerRadius}" />

        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="FontSize"
                Value="{StaticResource CaptionTextBlockFontSize}" />

        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Chip">
                    <Border Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <TextBlock HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   FontSize="{TemplateBinding FontSize}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalTextAlignment="{StaticResource ChipHorizontalTextAlignment}"
                                   Text="{TemplateBinding Text}"
                                   TextAlignment="{StaticResource ChipTextAlignment}"
                                   TextLineBounds="Tight" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
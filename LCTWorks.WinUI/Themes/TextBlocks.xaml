<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <x:Double x:Key="FluentIconsTextFontSize">24</x:Double>
    <x:Double x:Key="FluentIconsItemTextFontSize">16</x:Double>
    <x:Double x:Key="MaterialSymbolsTextFontSize">20</x:Double>

    <!--  Base styles  -->
    <Style x:Key="BaseRegularTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource AppRegularFontFamily}" />
    </Style>
    <Style x:Key="BaseLightTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource AppLightFontFamily}" />
    </Style>
    <Style x:Key="BaseBoldTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource AppBoldFontFamily}" />
    </Style>
    <Style x:Key="BaseIconTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="TextAlignment"
                Value="Center" />
    </Style>

    <!--  Icon styles  -->
    <Style x:Key="FluentIconsTextBlockStyle"
           BasedOn="{StaticResource BaseIconTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource FluentIconsFontFamily}" />
        <Setter Property="FontSize"
                Value="{StaticResource FluentIconsTextFontSize}" />
    </Style>
    <Style x:Key="FluentIconsItemTextBlockStyle"
           BasedOn="{StaticResource FluentIconsTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="{StaticResource FluentIconsItemTextFontSize}" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="TextAlignment"
                Value="Left" />
    </Style>
    <Style x:Key="MaterialSymbolsTextBlockStyle"
           BasedOn="{StaticResource BaseIconTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource MaterialSymbolsFontFamily}" />
        <Setter Property="FontSize"
                Value="{StaticResource MaterialSymbolsTextFontSize}" />
    </Style>

    <!--  General text styles  -->
    <Style x:Key="AppHeaderTextBlockStyle"
           BasedOn="{StaticResource BaseLightTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="32" />
    </Style>
    <Style x:Key="AppTitleTextBlockStyle"
           BasedOn="{StaticResource BaseLightTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="24" />
    </Style>
    <Style x:Key="AppBodyTextBlockStyle"
           BasedOn="{StaticResource BaseRegularTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="14" />
    </Style>
    <Style x:Key="AppCaptionTextBlockStyle"
           BasedOn="{StaticResource BaseRegularTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="{StaticResource CaptionTextBlockFontSize}" />
    </Style>

    <!--  Item text styles  -->
    <Style x:Key="ItemTitleTextBlockStyle"
           BasedOn="{StaticResource BaseRegularTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="16" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="TextAlignment"
                Value="Left" />
    </Style>
    <Style x:Key="ItemDescriptionTextBlockStyle"
           BasedOn="{StaticResource ItemTitleTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="Opacity"
                Value=".75" />
        <Setter Property="TextTrimming"
                Value="CharacterEllipsis" />
        <Setter Property="TextWrapping"
                Value="WrapWholeWords" />
        <Setter Property="MaxLines"
                Value="2" />
    </Style>
</ResourceDictionary>
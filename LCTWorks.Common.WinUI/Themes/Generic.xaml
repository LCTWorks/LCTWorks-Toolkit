<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:LCTWorks.Common.WinUI.Controls"
                    xmlns:local="using:LCTWorks.Common.WinUI">

    <Thickness x:Key="ChipPadding">12,6</Thickness>
    <CornerRadius x:Key="ChipCornerRadius">8</CornerRadius>
    <Style TargetType="controls:ChipControl">
        <Setter Property="Padding"
                Value="{StaticResource ChipPadding}" />
        <Setter Property="CornerRadius"
                Value="{StaticResource ChipCornerRadius}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:ChipControl">
                    <Border Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalTextAlignment="Center"
                                   Text="{TemplateBinding Text}"
                                   TextAlignment="Center"
                                   TextLineBounds="TrimToCapHeight" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>